{% extends '::base.html.twig' %}
{% block body -%}
	<div class="container">
		<div class="row">
			<div id="entete" class="span12">
				<h2>Liste des Catégories <i class="icon-list"></i></h2>
				<div class="liens span10 paddingRight bords">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for entity in entities %}
								<tr>
									<td><a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
									<td>{{ entity.nom }}</td>
									<td>
										<a href="{{ path('admin_categories_show', { 'id': entity.id }) }}" class="lien">voir <i class="icon-eye-open"></i></a>
										&nbsp;&nbsp;&nbsp;&nbsp;
										<a href="{{ path('admin_categories_edit', { 'id': entity.id }) }}" class="lien">modidier <i class="icon-edit"></i></a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="wrapper">
						<div class="parent">
							<a href="{{ path('admin_categories_new') }}" class="bouton children">Nouvelle entrée</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}